<% if (error) { %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  <% } %>

<div class="content-body">
    <div class="container">
        <div class="row">
            <main class="col-md-12">
                <h1 class="page-title">আডমিন লগিন </h1>
                <article class="post">
                    <div class="entry-content clearfix">
                        <form action="#" method="post" class="contact-form">
                            <div class="row">
                                <div class="col-md-6 col-md-offset-3">
                                    <input type="text" name="username" placeholder="ইউজার নেম" required>
                                    <input type="password" name="password" placeholder="পাসওয়ার্ড " required>
                                    <div class="text-center">
                                        <button class="btn-send btn-5 btn-5b ion-ios-paperplane"><span>লগিন করুন </span></button>
                                    </div>
                                </div>
                            </div>	<!-- row -->
                        </form>
                    </div>
                </article>
            </main>
        </div>
    </div>
</div>